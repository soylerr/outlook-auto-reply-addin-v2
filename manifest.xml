<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" 
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" 
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0" 
           xsi:type="MailApp">
  
  <Id>12345678-1234-1234-1234-123456789012</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Öztüryakiler</ProviderName>
  <DefaultLocale>tr-TR</DefaultLocale>
  <DisplayName DefaultValue="Otomatik Yanıt Yöneticisi"/>
  <Description DefaultValue="Şirket standart otomatik yanıt mesajları için gelişmiş yönetici"/>
  <IconUrl DefaultValue="https://ozridvan.github.io/outlook-auto-reply-addin-v2/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://ozridvan.github.io/outlook-auto-reply-addin-v2/assets/icon-80.png"/>
  <SupportUrl DefaultValue="https://github.com/ozridvan/outlook-auto-reply-addin-v2"/>
  
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>
  
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://ozridvan.github.io/outlook-auto-reply-addin-v2/taskpane.html"/>
        <RequestedHeight>450</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  
  <Permissions>ReadWriteMailbox</Permissions>
  
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>
  
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">
      <Requirements>
        <bt:Sets DefaultMinVersion="1.3">
          <bt:Set Name="Mailbox"/>
        </bt:Sets>
      </Requirements>
      
      <Hosts>
        <Host xsi:type="MailHost">
          <DesktopFormFactor>
            <GetStarted>
              <Title resid="GetStarted.Title"/>
              <Description resid="GetStarted.Description"/>
              <LearnMoreUrl resid="GetStarted.LearnMoreUrl"/>
            </GetStarted>
            
            <FunctionFile resid="Commands.Url"/>
            
            <ExtensionPoint xsi:type="MessageReadCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="msgReadGroup">
                  <Label resid="GroupLabel"/>
                  <Control xsi:type="Button" id="msgReadOpenPaneButton">
                    <Label resid="TaskpaneButton.Label"/>
                    <Supertip>
                      <Title resid="TaskpaneButton.Label"/>
                      <Description resid="TaskpaneButton.Tooltip"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="Icon.16x16"/>
                      <bt:Image size="32" resid="Icon.32x32"/>
                      <bt:Image size="80" resid="Icon.80x80"/>
                    </Icon>
                    <Action xsi:type="ShowTaskpane">
                      <TaskpaneId>ButtonId1</TaskpaneId>
                      <SourceLocation resid="Taskpane.Url"/>
                    </Action>
                  </Control>
                </Group>
              </OfficeTab>
            </ExtensionPoint>
          </DesktopFormFactor>
        </Host>
      </Hosts>
      
      <Resources>
        <bt:Images>
          <bt:Image id="Icon.16x16" DefaultValue="https://ozridvan.github.io/outlook-auto-reply-addin-v2/assets/icon-16.png"/>
          <bt:Image id="Icon.32x32" DefaultValue="https://ozridvan.github.io/outlook-auto-reply-addin-v2/assets/icon-32.png"/>
          <bt:Image id="Icon.80x80" DefaultValue="https://ozridvan.github.io/outlook-auto-reply-addin-v2/assets/icon-80.png"/>
        </bt:Images>
        <bt:Urls>
          <bt:Url id="GetStarted.LearnMoreUrl" DefaultValue="https://github.com/ozridvan/outlook-auto-reply-addin-v2"/>
          <bt:Url id="Commands.Url" DefaultValue="https://ozridvan.github.io/outlook-auto-reply-addin-v2/commands.html"/>
          <bt:Url id="Taskpane.Url" DefaultValue="https://ozridvan.github.io/outlook-auto-reply-addin-v2/taskpane.html"/>
        </bt:Urls>
        <bt:ShortStrings>
          <bt:String id="GetStarted.Title" DefaultValue="Otomatik Yanıt Yöneticisi"/>
          <bt:String id="GetStarted.Description" DefaultValue="Şirket standart otomatik yanıt mesajlarını kolayca ayarlayın"/>
          <bt:String id="TaskpaneButton.Label" DefaultValue="Otomatik Yanıt"/>
          <bt:String id="GroupLabel" DefaultValue="Otomatik Yanıt Yöneticisi"/>
        </bt:ShortStrings>
        <bt:LongStrings>
          <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Otomatik yanıt ayarlarını yapılandırın"/>
        </bt:LongStrings>
      </Resources>
    </VersionOverrides>
  </VersionOverrides>
</OfficeApp>
